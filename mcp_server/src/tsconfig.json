{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "tools/*.ts",
    "resources/*.ts", 
    "services/*.ts",
    "types/*.ts",
    "utils/*.ts"
  ]
}
